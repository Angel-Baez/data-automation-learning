# === CSV PROCESSOR CONFIGURATION ===
# Copy this file to .env and customize values for your environment

# === FILE PATHS ===
INPUT_DIRECTORY=data/input
OUTPUT_DIRECTORY=data/output
TEMP_DIRECTORY=data/temp
LOG_DIRECTORY=logs

# === PROCESSING CONFIGURATION ===
# Maximum file size in MB for processing
MAX_FILE_SIZE_MB=100

# Batch size for processing large files
BATCH_SIZE=1000

# Default encoding for CSV files (auto-detect if empty)
DEFAULT_ENCODING=utf-8

# Default delimiter for CSV files (auto-detect if empty)  
DEFAULT_DELIMITER=,

# === DATA VALIDATION ===
# Maximum number of validation errors to report
MAX_VALIDATION_ERRORS=50

# Strict mode: fail on any validation error (true/false)
STRICT_VALIDATION=false

# === LOGGING CONFIGURATION ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file name pattern (supports strftime formatting)
LOG_FILE_PATTERN=csv_processor_%Y%m%d.log

# Maximum log file size in MB before rotation
LOG_MAX_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# Console logging enabled (true/false)
CONSOLE_LOGGING=true

# === PERFORMANCE SETTINGS ===
# Number of CPU cores to use for processing (0 for auto-detect)
CPU_CORES=0

# Memory limit in GB for large file processing
MEMORY_LIMIT_GB=2

# === NOTIFICATION SETTINGS (Optional) ===
# Email notifications for job completion
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENTS=admin@company.com,data@company.com

# Slack notifications (optional)
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# === DATA QUALITY RULES ===
# Minimum data quality score (0.0 to 1.0)
MIN_QUALITY_SCORE=0.8

# Maximum percentage of missing values allowed
MAX_MISSING_PERCENTAGE=10

# Maximum percentage of duplicate rows allowed
MAX_DUPLICATE_PERCENTAGE=5

# === OUTPUT SETTINGS ===
# Default output format: csv, excel, json, parquet
DEFAULT_OUTPUT_FORMAT=csv

# Include processing metadata in output (true/false)
INCLUDE_METADATA=true

# Add timestamp to output filenames (true/false)
ADD_TIMESTAMP=true

# === DEVELOPMENT SETTINGS ===
# Environment: development, testing, production
ENVIRONMENT=development

# Debug mode enables verbose logging and error details
DEBUG_MODE=false

# Profile performance (creates performance reports)
ENABLE_PROFILING=false